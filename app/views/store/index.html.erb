<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>
<br><br>
  <% @items.each do |item| %>
    <p><%= link_to item.title, item_path(item) %> | $<%= item.price.to_f/100 %> |
      <%if user_signed_in? %>
        <%= button_to 'Add to Cart', line_items_path(item_id: item) %>
      <%end %></p>
  <% end %>
